<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_title_bar"
    android:background="@color/bg_title_bar" >

    <TextView
        android:id="@+id/frag_home_title_bar_tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="46dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/title_text_size"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/search_rl"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dp"
        android:background="@drawable/new_shape_white_search" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/search_2"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="搜索视频，资料"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_base" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frag_home_title_bar_ll_earn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_title_color"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/frag_home_title_bar_tv_earn"
            style="@style/text_base"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="  "
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/frag_home_title_bar_iv_earn_arrow"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/nopic"
            />
    </LinearLayout>

    <!-- <LinearLayout -->
    <!-- android:id="@+id/frag_home_title_bar_ll_location" -->
